{
  "dataRoles": [
    {
      "displayName": "Asset Number",
      "name": "asset",
      "kind": "Grouping"
    },
    {
      "displayName": "Value",
      "name": "value",
      "kind": "Measure"
    }
  ],

  "dataViewMappings": [
    {
      "conditions": [
        {
          "asset": { "max": 1 },
          "value": { "max": 1 }
        }
      ],
      "categorical": {
        "categories": { "for": { "in": "asset" } },
        "values": { "for": { "in": "value" } }
      }
    }
  ],

  "tooltips": {
    "supportsEnhancedTooltips": true,
    "supportedTypes": {
      "default": true,
      "canvas": true
    }
  },

  "objects": {
    "assetSettings": {
      "displayName": "Asset Settings",
      "properties": {
        "fontSize": {
          "displayName": "Font Size",
          "type": { "numeric": true }
        },
        "enableFiltering": {
          "displayName": "Filter other visuals",
          "type": { "bool": true }
        }
      }
    }
  },

  "supportsHighlight": true,
  "privileges": []
}
